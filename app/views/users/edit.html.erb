<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: 'layouts/settings_navigation' %>
    </div>
    <div class="col-md-8">
      <div class="settings-container">
        <div class="settings-heading">Public profile</div>
        <%= form_for(@user) do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>

          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>

          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>

          <%= f.submit "Update profile", class: "btn btn-primary" %>
        <% end %>
        <button>
          <%= link_to "Delete your account", @user, method: :delete, data: { confirm: "Are your sure?" } %>
        </button>
      </div>
    </div>
  </div>
</div>